{% extends 'layout/base_auth.html.twig' %}

{% block content %}
	<!-- Login Form -->
	<div class="p-8">
		<h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Bem-vindo de volta!</h2>

		<!-- Success Alert -->
		<div class="hidden mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center gap-3">
			<span class="material-icons text-green-600" style="font-size: 20px;">check_circle</span>
			<div class="flex-1">
				<p class="text-sm font-medium">Senha redefinida com sucesso!</p>
				<p class="text-xs text-green-600 mt-1">Você já pode fazer login com sua nova senha.</p>
			</div>
		</div>

		<!-- Error Alert -->
		{% if flashMessage is not empty and flashMessage.error %}
			<div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center gap-3">
				<span class="material-icons text-red-600" style="font-size: 20px;">error</span>
				<div class="flex-1">
					<p class="text-sm font-medium">{{ flashMessage.error }}</p>
					<p class="text-xs text-red-600 mt-1">E-mail ou senha incorretos. Tente novamente.</p>
				</div>
			</div>
		{% endif %}

		<form method="POST" action="/login">
			<!-- Email Input -->
			<div class="mb-4">
				<label class="block text-sm font-medium text-gray-700 mb-2">
					<span class="flex items-center gap-2">
						<span class="material-icons text-gray-500" style="font-size: 18px;">email</span>
						E-mail
					</span>
				</label>
				<input type="email" name="email" value="{{ flashMessage.old_email|default('')|e }}" required class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 focus:outline-none transition-all duration-200" placeholder="seu@email.com">
			</div>

			<!-- Password Input -->
			<div class="mb-4">
				<label class="block text-sm font-medium text-gray-700 mb-2">
					<span class="flex items-center gap-2">
						<span class="material-icons text-gray-500" style="font-size: 18px;">lock</span>
						Senha
					</span>
				</label>
				<input type="password" name="password" required class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 focus:outline-none transition-all duration-200" placeholder="••••••••">
			</div>

			<!-- Remember Me & Forgot Password -->
			<div class="flex items-center justify-between mb-6">
				<label class="flex items-center gap-2 cursor-pointer">
					<input type="checkbox" id="lembrar" class="w-4 h-4 rounded border-2 border-gray-300 text-violet-500 focus:ring-violet-500/20 focus:ring-2 transition-all duration-200">
					<span class="text-sm text-gray-600">Lembrar meu e-mail</span>
				</label>
				<a href="/esqueci-minha-senha" class="text-sm text-violet-500 hover:text-purple-700 hover:underline transition-all duration-200">
					Esqueci minha senha
				</a>
			</div>

			<!-- Login Button -->
			<button type="submit" class="w-full bg-violet-500 hover:bg-purple-700 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-violet-500/30 text-white py-3 rounded-lg font-semibold text-lg flex items-center justify-center gap-2 transition-all duration-300 border-none cursor-pointer">
				<span class="material-icons">login</span>
				Entrar
			</button>
		</form>
	</div>
{% endblock %}